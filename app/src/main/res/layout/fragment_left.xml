<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:textSize="30sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:text="가든 스토리" />

    <ImageButton
        android:id="@+id/btn_story1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape_for_circle_button"
        android:src="@drawable/ic_story1_button" />

    <ImageButton
        android:id="@+id/btn_story2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape_for_circle_button"
        android:src="@drawable/ic_story2_button" />

    <ImageButton
        android:id="@+id/btn_story3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape_for_circle_button"
        android:src="@drawable/ic_story3_button" />


</LinearLayout>